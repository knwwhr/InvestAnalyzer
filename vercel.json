{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/tracking-dashboard.html", "destination": "/tracking-dashboard.html" }
  ],
  "crons": [
    {
      "path": "/api/cron/update-patterns",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/recommendations/update-prices",
      "schedule": "0 16 * * 1-5"
    },
    {
      "path": "/api/cron/cleanup-trends",
      "schedule": "0 18 * * *"
    }
  ]
}
