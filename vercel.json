{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/tracking-dashboard.html", "destination": "/tracking-dashboard.html" },
    { "source": "/api/screening/:type", "destination": "/api/screening-router?type=:type" },
    { "source": "/api/patterns/:type", "destination": "/api/patterns-router?type=:type" }
  ],
  "crons": [
    {
      "path": "/api/cron/update-patterns",
      "schedule": "0 9 * * *"
    }
  ]
}
